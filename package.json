{
	"name": "proyecto",
	"version": "1.0.0",
	"description": "La carpeta `domain/` contiene los siguientes aggregados y entidades:",
	"main": "index.js",
	"scripts": {
		"dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/index.ts",
		"build": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
		"start": "node dist/index.js",
		"typeorm": "node -r ts-node/register -r tsconfig-paths/register ./node_modules/typeorm/cli.js -d ./src/infrastructure/Persistence/PersistenceModel/db.ts",
		"migration:generate": "npm run typeorm migration:generate ./src/infrastructure/Persistence/Migrations/InitialMigration",
		"migration:run": "npm run typeorm migration:run",
		"migration:revert": "npm run typeorm migration:revert",
		"seed": "ts-node -r tsconfig-paths/register src/infrastructure/Persistence/seed.ts",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"dotenv": "^17.2.3",
		"express": "^5.2.1",
		"pg": "^8.16.3",
		"reflect-metadata": "^0.2.2",
		"tsyringe": "^4.10.0"
	},
	"devDependencies": {
		"@types/express": "^5.0.6",
		"@types/jest": "^30.0.0",
		"@types/node": "^24.10.1",
		"@types/supertest": "^6.0.3",
		"jest": "^30.2.0",
		"supertest": "^7.1.4",
		"ts-jest": "^29.4.6",
		"ts-node": "^10.9.2",
		"ts-node-dev": "^2.0.0",
		"tsc-alias": "^1.8.16",
		"tsconfig-paths": "^4.2.0",
		"typeorm": "^0.3.27",
		"typescript": "^5.9.3"
	}
}
